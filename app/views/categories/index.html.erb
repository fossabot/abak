<h1><%= t('.title') %></h1>

<div class="buttons_panel">

    <%= link_to "New Category", new_category_path, class: 'btn btn-outline-primary btn-sm' %>

</div>

<section id="categories">
    
    <table class="table">
        
        <thead>

            <tr>

                <th>#</th>

                <th><%= t('cat.table.name') %></th>

                <th><%= t('cat.table.parent') %></th>

                <th></th>

            </tr>

        </thead>

        <tbody>
            
            <% @categories.each_with_index do |category, index| %>
                
                <tr>

                    <td><%= index + 1 %></td>

                    <td><%= link_to category.name, category %></td>

                    <td><%= link_to category.parent.name, category.parent if category.parent.present? %></td>

                    <td>

                        <%= link_to t('cat.table.add'), add_category_path(category), class: 'btn btn-outline-primary btn-sm' %>

                        <%= link_to t('cat.table.edit'), edit_category_path(category), class: 'btn btn-outline-info btn-sm' %>

                        <%= link_to t('cat.table.delete'), category_path(category), method: :delete, data: { confirm: t('questionSure') }, class: 'btn btn-outline-danger btn-sm' %>

                    </td>

                </tr>

            <% end %>

        </tbody>

    </table>

</section>