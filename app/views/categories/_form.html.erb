<!-- Show error -->
<% if @category.errors.any? %>
  <div class="alert alert-danger">
    <h3><%= t('common.errors') %></h3>
    <ul>
    <% @category.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @category do |f| %>
  <div class="form-group">
    <%= f.label :name %>
  <% if @categories.length > 1 %>
    <%= f.text_field :name, class: 'form-control' %>
  <% else %>
    <%= f.text_field :name, value: '', class: 'form-control' %>
  <% end %>
  </div>
  <div class="form-group">
    <%= f.label :parent_id %>
  <% if @categories.length > 1 %>
    <%= f.collection_select :parent_id, @categories, :id, :name, { include_blank: true }, class: 'form-control' %>
  <% else  %>
    <%= f.collection_select :parent_id, @categories, :id, :name, { disabled: true}, class: 'form-control' %>
  <% end %>
  </div>
  <div class="form-group">
      <%= f.submit t('form.accept'), class: 'btn btn-primary' %>     
      <%= link_to t('form.cancel'), :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
