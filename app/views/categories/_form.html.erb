<!-- Show error -->

<% if @category.errors.any? %>

	<div class="alert alert-danger">

		<h3><%= t('common.errors') %></h3>

		<ul>

			<% @category.errors.full_messages.each do |message| %>

			<li><%= message %></li>

			<% end %>

		</ul>

	</div>

<% end %>

<!-- Input and edit form here -->

<%= form_for @category do |f| %>

	<div class="form-group">

		<%= f.label :name %>

		<%= f.text_field :name, class: 'form-control' %>

	</div>

	<div class="form-group">
		
		<%= f.label :parent_id %>

		<%= f.collection_select :parent_id, @categories, :id, :name, { include_blank: true }, class: 'form-control' %>
	
	</div>

	<div class="form-group">
		
		<%= f.submit t('form.accept'), class: 'btn btn-primary' %>
		
		<%= link_to t('form.cancel'), :back, class: 'btn btn-outline-secondary' %>
	
	</div>

<% end %>