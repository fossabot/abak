<div class="container">
  <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
    <div class="navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'All categories', categories_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'New category', new_category_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'All articles', posts_path, class: 'nav-link', hidden: 'hidden' %>
        </li>
        <li class="nav-item">
          <%= link_to 'New article', new_post_path, class: 'nav-link' %>
        </li>
      </ul>
      <%= form_with url: search_path, local: true, method: :get, html: { class: 'form-inline my-2 my-lg-0' } do |form| %>
          <%= form.text_field :q, placeholder: 'Search', data: { behavior: 'autocomplete' }, class: 'form-control mr-sm-2' %>
          <%= form.button 'Search', class: 'btn btn-outline-success my-2 my-sm-0' %>
      <% end %>
    </div>
  </nav>
</div>
