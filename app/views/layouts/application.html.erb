<!DOCTYPE html>

<html>

<head>

	<title><%= t('title') %></title>

	<%= stylesheet_link_tag    "application.scss" %>

	<%= javascript_include_tag "application" %>

	<%= csrf_meta_tags %>

</head>

<body>

<!-- Navbar -->

	<div class="container">

		<nav class="navbar navbar-toggleable-md navbar-light bg-faded">

			<div class="navbar-collapse">

				<ul class="navbar-nav">

					<li class="nav-item">

						<%= link_to 'All categories', categories_path, class: 'nav-link' %>

					</li>

					<li class="nav-item">

						<%= link_to 'New category', new_category_path, class: 'nav-link' %>

					</li>

					<li class="nav-item">

						<%= link_to 'All articles', posts_path, class: 'nav-link', hidden: 'hidden' %>

					</li>

					<li class="nav-item">

						<%= link_to 'New article', new_post_path, class: 'nav-link' %>

					</li>

				</ul>

			</div>

		</nav>

	</div>

<!-- Flash error -->

	<div class="container">

		<div class="row">

			<div class="col-md-12">

				<% flash.each do |name, message| %>

					<div class="alert alert-<%= name %>">

						<%= message %>

					</div>

				<% end %>

			</div>

		</div>

<!-- content -->

		<div class="row">

			<div class="col-md-3">
				
				<%= render 'tree/index' %>

			</div>

			<div class="col-md-9">
				
				<%= yield %>

			</div>

		</div>

	</div>

</body> 

</html>