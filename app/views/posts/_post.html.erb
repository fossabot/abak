<article>

	<section class="head">
		
		<h2><%= link_to post.title, post_path(post) %></h2>

<!-- Accountability blank category -->

		<% if post.category.present? %>

			<%= link_to post.category.name, post.category %>

		<% end %>

		<%= link_to t('form.edit'), edit_post_path(post) %>

		<%= link_to t('form.delete'), post_path(post), method: :delete, data: { confirm: t('questionSure') } %>

	</section>

	<section class="preview">
		
		<%= post.preview %>

	</section>

</article>