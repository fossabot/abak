<%= render 'tree/breadcrumb', category: @post.category %>
<h1><%= @post.title %></h1>
<!-- Accountability blank category -->
<% if @post.category.present? %>
  <%= link_to @post.category.name, @post.category %>
<% end %>
<%= link_to t('form.edit'), edit_post_path(@post) %>
<%= delete_button_to t('form.delete'), post_path(@post), class: 'btn btn-outline-danger btn-sm' %>
<!-- just show both options -->
<p><%= @post.body %></p>
<hr>
<p><%= markdown @post.body %></p>
